{
  "version": 2,
  "name": "hugo-blog",
  "alias": ["huskyhoochu.com", "www.huskyhoochu.com"],
  "builds": [
    {
      "src": "build.sh",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {
      "src": "^/css/(.*)",
      "headers": {
        "cache-control": "public,max-age=31536000,immutable"
      }
    },
    {
      "src": "^/favicon_package/(.*)",
      "headers": {
        "cache-control": "public,max-age=31536000,immutable"
      }
    },
    {
      "src": "^/(.*).html",
      "headers": {
        "cache-control": "public,max-age=0,must-revalidate"
      }
    }
  ]
}